{
  "name": "version-diff-action",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.0.0"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^2.1.1",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "eslint": "^9.14.0",
    "typescript": "^5.0.0"
  }
}
