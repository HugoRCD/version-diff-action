{
  "name": "version-diff-action",
  "version": "1.0.1",
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun --watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1"
  },
  "devDependencies": {
    "@hrcd/eslint-config": "^2.3.1",
    "@types/node": "^22.18.9",
    "bun-types": "latest",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3"
  }
}
